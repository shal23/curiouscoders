<br>
<% @team.posts.each do |post| %>
  <p><%= simple_format(post.content) %></p>
  <p><%= link_to post.user.name, post.user %> on <%= post.created_at.strftime("%e %b %Y") %></p>
  <hr>
<% end %> 

<% if user_signed_in? %>
  <%= simple_form_for(Post.new) do |f| %>
    <div class="form-inputs">
      <%= f.input :content, :label => "Post on the wall", :input_html => { :rows => 3 }, :class => "fit-width" %>
      <%= f.hidden_field 'postable_id', :value => @team.id %>
      <%= f.hidden_field 'postable_type', :value => 'team' %>
    </div>
      <%= f.button :submit, "Add your comment" %><br>
  <% end %>
<% end %>